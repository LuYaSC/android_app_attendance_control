<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalles_alumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lacf.luisadrian.examen2parcialfinal.DetallesAlumno">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_weight=".2" />

                <TextView
                    android:text="ID alumno"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/lbl_detalle_alumno_id"
                    android:layout_weight=".8"/>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="NOMBRE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight=".2" />

                <TextView
                    android:text="Nombre alumno"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_detalle_alumno_nombre"
                    android:layout_weight=".8" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="GRADO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight=".2" />

                <TextView
                    android:text="Grado alumno"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_detalle_alumno_grado"
                    android:layout_weight=".8" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="GRUPO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight=".2" />

                <TextView
                    android:text="Grupo alumno"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_detalle_alumno_grupo"
                    android:layout_weight=".8" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_inasistencias"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
